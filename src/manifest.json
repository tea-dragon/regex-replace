{
    "manifest_version":2,
    "name":"Regex to Link",
    "version":"0.0.1.3",
    "description":"Turns all kindsa text into more helpful links",
    "browser_action":{
        "default_title":"Regex to Link Options",
        "default_icon":{
            "19":"img/gear19.png",
            "38":"img/gear38.png"
        },
        "default_popup":"html/main.html"
    },
    "author":"some donkus",
    "icons":{
        "16":"img/gear16.png",
        "48":"img/gear48.png",
        "128":"img/gear128.png"
    },
    "content_scripts":[
        {
            "matches":[
                "*://*/*"
            ],
            "js":[
                "js/content_script.js"
            ],
            "run_at":"document_end"
        }
    ],
    "options_page":"html/options.html",
    "permissions":[
        "storage"
    ]
}
